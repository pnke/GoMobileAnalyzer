# ===========================================
# Go Analysis Server Configuration
# ===========================================
# Copy this file to .env and fill in the values

# KataGo Configuration (required for analysis)
# Use absolute paths
KATAGO_PATH=/path/to/katago
KATAGO_MODEL=/path/to/model.bin.gz
KATAGO_CONFIG=/path/to/analysis_config.cfg

# ===========================================
# Security Settings
# ===========================================

# API Key Authentication
# If set, all /analyze requests require X-API-Key header
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=

# If true, server fails to start without API_KEY configured
REQUIRE_API_KEY=false

# CORS Allowed Origins (comma-separated)
# Use "*" for development, specific origins for production
# Example: https://myapp.com,https://www.myapp.com
ALLOWED_ORIGINS=*

# ===========================================
# Rate Limiting
# ===========================================

# Maximum requests per window per IP/API key
RATE_LIMIT_REQUESTS=30

# Rate limit window in seconds
RATE_LIMIT_WINDOW_SEC=60

# ===========================================
# Request Limits
# ===========================================

# Maximum request body size in bytes (default: 1MB)
MAX_BODY_BYTES=1048576

# KataGo analysis timeout in seconds
KATAGO_TIMEOUT_SEC=120

# ===========================================
# Analysis Settings
# ===========================================

# Minimum allowed analysis steps
MIN_ANALYSIS_STEPS=100

# Maximum allowed analysis steps
MAX_ANALYSIS_STEPS=100000

# Default analysis steps if not specified
DEFAULT_ANALYSIS_STEPS=1000
